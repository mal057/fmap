# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Cloudflare R2 Configuration
CLOUDFLARE_ACCOUNT_ID=your-account-id
CLOUDFLARE_R2_BUCKET_NAME=fmap-waypoints
CLOUDFLARE_R2_ACCESS_KEY_ID=your-access-key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your-secret-key

# API Configuration
VITE_API_URL=http://localhost:8787

# ============================================
# Security Configuration
# ============================================

# Environment (development or production)
ENVIRONMENT=development

# Supabase JWT Secret (for token verification)
# Get this from your Supabase project settings under API > JWT Settings
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Supabase URL and Anon Key (for API)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# Malware Scanning
# ============================================

# Enable/disable malware scanning
MALWARE_SCAN_ENABLED=true

# VirusTotal API Key (optional, for malware scanning)
# Get a free API key at https://www.virustotal.com/
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# ClamAV Service URL (optional, for self-hosted malware scanning)
# CLAMAV_SERVICE_URL=http://clamav-service:8080

# ============================================
# Rate Limiting Configuration
# ============================================

# Number of file uploads allowed per hour per user
RATE_LIMIT_UPLOADS_PER_HOUR=10

# Number of file downloads allowed per hour per user
RATE_LIMIT_DOWNLOADS_PER_HOUR=100

# Number of API requests allowed per hour per IP address
RATE_LIMIT_API_REQUESTS_PER_HOUR=1000

# Cloudflare Workers KV Namespace ID (for rate limiting)
# Create with: wrangler kv:namespace create "RATE_LIMIT_KV"
# RATE_LIMIT_KV_ID=your-kv-namespace-id

# ============================================
# CORS Configuration
# ============================================

# Allowed origins for CORS (comma-separated)
# Use '*' for development, specific domains for production
# Example: https://fishmap.com,https://app.fishmap.com
ALLOWED_ORIGINS=*

# ============================================
# Security Headers Configuration
# ============================================

# Content Security Policy
# Customize based on your frontend requirements
# CSP_DEFAULT_SRC='self'
# CSP_SCRIPT_SRC='self'
# CSP_STYLE_SRC='self' 'unsafe-inline'

# HSTS Max Age (in seconds, default: 31536000 = 1 year)
# HSTS_MAX_AGE=31536000

# Frame Options (DENY or SAMEORIGIN)
# FRAME_OPTIONS=DENY

# ============================================
# File Upload Configuration
# ============================================

# Maximum file size in bytes (default: 500MB)
MAX_FILE_SIZE=524288000

# Allowed file extensions (comma-separated)
# Default: .slg,.sl2,.sl3,.gpx,.adm,.dat,.son,.fsh
# ALLOWED_EXTENSIONS=.slg,.sl2,.sl3,.gpx,.adm,.dat,.son,.fsh

# ============================================
# Logging and Monitoring
# ============================================

# Sentry DSN (optional, for error tracking)
# SENTRY_DSN=your-sentry-dsn

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================
# Development Settings
# ============================================

# Disable authentication in development (not recommended for production)
# DEV_DISABLE_AUTH=false

# Enable verbose logging in development
# DEV_VERBOSE_LOGGING=true
